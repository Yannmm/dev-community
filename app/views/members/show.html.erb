<div class="col-lg-10 mx-auto mt-5">
  <div class="card mb-5">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-4">
          <%= image_tag "avatar.png", class: "img-fluid" %>
        </div>
        <%= render "member_details", user: @user %>
        <% if user_signed_in? && @user == current_user %>
          <div class="col-lg-2">
            <div class="d-flex justify-content-end">
              <%= link_to edit_member_details_path, data: { controller: "bs-modal-form" } do %>
                <i class="bit bi-pencil-fill"></i>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card mb-5">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <div class="d-flex justify-content-start">
            <h3>About</h3>
          </div>
        </div>
        <% if user_signed_in? && @user == current_user %>
        <div class="col-lg-6">
          <div class="d-flex justify-content-end">
            <%= link_to edit_member_description_path, data: { controller:
            "bs-modal-form" } do %>
              <i class="bit bi-pencil-fill"></i>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <%= render "member_description", user: @user %>
    </div>
  </div>
</div>
